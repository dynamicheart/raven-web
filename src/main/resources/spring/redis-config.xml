<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Jedis ConnectionFactory -->
    <beans:bean id="jedisConnectionFactory"
                class="org.springframework.pushModelData.redis.connection.jedis.JedisConnectionFactory" p:use-pool="true"/>

    <beans:bean id="stringRedisTemplate" class="org.springframework.pushModelData.redis.core.StringRedisTemplate"
                p:connectionFactory-ref="jedisConnectionFactory"/>

</beans:beans>